<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="bookmark_form">
        <%= render 'shared/bookmark_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Bookmark Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to the Cloud Bookmark</h1>
  
  <h2>
    This is the home page for the Cloud Bookmark app.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>
